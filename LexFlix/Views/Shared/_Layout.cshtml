<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LexFlix</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LexFlix.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">


            <a asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/logo_new.png" /></a>


              
            <div class="container-fluid">

                @*<img src="~/img/logo_new.png" />*@

                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index"><h2><b>LexFlix</b></h2></a>


                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">                                       


                        <li class="navbar-item">
                            <a class="nav-link text-white" asp-controller="Movies" asp-action="MovieAdmin">
                                <h5><i class="bi bi-file-person"></i> Movie Admin</h5>
                            </a>
                        </li>
                        
                       @* <li class="navbar-item">
                            <a class="nav-link text-white" asp-controller="Movies" asp-action="Library">
                                <h5><i class="bi-film"></i> Movie Library</h5>
                            </a>
                        </li>*@
                        <li class="navbar-item">
                            <a class="nav-link text-white" asp-controller="Order" asp-action="ShowOrder">
                                <h5><i class="bi bi-card-checklist"> </i>Find your Order</h5>
                            </a>
                        </li>
                    </ul>                   
                    <button class="btn btn-outline-white my-2 my-sm-0" type="submit"><h4><i class="bi bi-search text-white"></i></h4></button>
                    <form class="form-inline my-2 my-lg-0" asp-controller="Home" asp-action="Filter">
                        <input style="padding-right: 100px;" name="searchString" type="text" class="form-control mr-sm-2" placeholder="Search for a movie...">
                    </form>
                    <partial name="_LoginPartial" />
                </div>
                </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

    </div>

    <div class="container">
    <main role="main" class="pb-3">
            @RenderBody()

        </main>
    </div>
    @*<footer class="border-top footer text-muted">
        <div class="container text-center" style="color: white;">
            <h6>&copy; 2022 - LexFlix</h6>
        </div>
    </footer>*@

    <footer class="sticky-footer">
        <h5>
            <i class="bi bi-facebook"></i>&nbsp;&nbsp;
            <i class="bi bi-instagram"></i>&nbsp;&nbsp;
            <i class="bi bi-twitter"></i>&nbsp;&nbsp;
        </h5>
        <h6>
            &copy; 2022 - LexFlix | Linköping
        </h6>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
