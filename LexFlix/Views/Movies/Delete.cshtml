    ViewData["Title"] = "Delete";
}

<div class="text-center">
    <h1 style ="color:white"> Delete</h1>

    <h3 style="color:white">Are you sure you want to delete this?</h3>
</div>

<div>
    <h4 style="color:white">Movies</h4>    
    <hr />
    <dl class="row">
        <dt class="col-sm-2" style="color:white">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10" style="color:white">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2" style="color:white">
            @Html.DisplayNameFor(model => model.Director)
        </dt>
        <dd class="col-sm-10" style="color:white">
            @Html.DisplayFor(model => model.Director)
        </dd>
        <dt class="col-sm-2" style="color:white">
            @Html.DisplayNameFor(model => model.ReleaseYear)
        </dt>
        <dd class="col-sm-10" style="color:white">
            @Html.DisplayFor(model => model.ReleaseYear)
        </dd>
        <dt class="col-sm-2" style="color:white">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
