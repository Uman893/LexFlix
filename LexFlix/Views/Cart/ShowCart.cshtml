@model LexFlix.Models.ViewModels.CartVM

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="text-center text-white">
    <h1><i class="bi bi-card-checklist"></i> Order Details</h1>

</div>

<table>
    <thead>
        <tr>
            <th><b>Title</b></th>
            <th>Quantity</th>
            <th>Price(Each)</th>
            <th>Total Price</th>
            <th>Order Management</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Movies != null)
        {
            @foreach (var movie in Model.Movies)
            {
                <partial name="_ShowCartPartial" model="movie"></partial>
            }
        }
    </tbody>

    @if (Model != null && Model.Movies != null)
    {
        <th>Total Price @Model.SumOfAllPrice</th>
        <th>
            @*<a asp-controller="Customer" asp-action="Checkout"><input type="button" value="Check Out!" /></a>*@

            <button type="button" class="btn btn-primary">
                <a class="text-white" asp-controller="Customer" asp-action="Checkout">
                    <i class="bi bi-clipboard-check-fill"></i>
                    Check Out!
                </a>
            </button>


        </th>

    }
</table>



